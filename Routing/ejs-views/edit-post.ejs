<!DOCTYPE html>
<html lang="en">
<%- include('./partials/head.ejs') %>
<body>
<%- include('./partials/nav.ejs') %>
<form id="contact-form" method="post" action="/edit/<%= post[0].id %>?_method=PUT">
    <div class="form-info">
        <label>Post Title
            <input type="text" name="title" value="<%= post[0].title %>">
        </label>
        <label>Author
            <input type="text" name="author" value="<%= post[0].author %>">
        </label>
    </div>
    <div class="form-text">
        <label>Post Text
            <textarea name="text"><%= post[0].text %></textarea>
        </label>
    </div>
    <div class="form-button">
        <input type="submit" value="Submit">
    </div>
</form>
</body>
</html>